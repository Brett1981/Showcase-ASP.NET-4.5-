@model Showcase.ViewModel.MovieIndexViewModel
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
@Html.ActionLink("New Movie", "New", "Movies", null, new { @class = "btn btn-primary" })


@if (Model.MovieList.Count == 0)
{
    <p>We don't have any movies yet.</p>
}
else
{
    <table class="table table-striped">
        <thead>
        <th scope="col">Movie</th>
        <th scope="col">Genre</th>
        </thead>
        <tbody>
            @foreach (var movie in Model.MovieList)
            {

                <tr>
                    <td scope="col">@Html.ActionLink(movie.Name, "Edit", "Movies", new { id = movie.ID }, null)</td>
                    <td scope="col">@movie.Genre.Name</td>
                </tr>
            }
        </tbody>
    </table>
}