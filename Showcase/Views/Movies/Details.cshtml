@model Showcase.Models.Movie
@{
    ViewBag.Title = "Movie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    @if(Model.Genre != null)
    {
        <li>Genre: @Model.Genre.Name</li>
    }
    @if(Model.ReleaseDate != null)
    {
        <li>Release Date: @Model.ReleaseDate</li>
    }
    @if(Model.DateAdded != null)
    {
        <li>Date Added: @Model.DateAdded</li>
    }
    @if(Model.NumberInStock != null)
    {
        <li>Number in Stock: @Model.NumberInStock</li>
    }

</ul>
