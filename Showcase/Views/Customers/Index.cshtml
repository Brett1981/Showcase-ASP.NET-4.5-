@model Showcase.ViewModel.CustomersViewModel
@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Customers</h2>


@if (Model.CustomerList.Count == 0)
{
    <p>We don't have any customers yet.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <th scope="col">Customer</th>
            <th scope="col">Discount Rate</th>
        </thead>
        <tbody>
            @foreach (var customer in Model.CustomerList)
            {
                <tr>
                    <td scope="col">@Html.ActionLink(customer.Name,"Edit","Customers", new { id = customer.ID }, null)</td>
                    <td scope="col">@customer.MembershipType.Name</td>
                </tr>            
            }
        </tbody>
    </table>
}